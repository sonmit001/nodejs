<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
<tiles-definitions>
	
	<definition name="home.*" template="/WEB-INF/views/inc/layout.jsp">
		<put-attribute name="css" value="{2}.css" />
		<put-attribute name="js" value="{2}.js" />
		<put-attribute name="header" value="/WEB-INF/views/inc/header.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp" />
		<put-attribute name="content" value="/WEB-INF/views/{1}.jsp" />
	</definition>
	
	<definition name="member.*" template="/WEB-INF/views/inc/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/inc/header.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp" />
		<put-attribute name="content" value="/WEB-INF/views/member/{1}.jsp" />
	</definition>

	<definition name="mypage.*" template="/WEB-INF/views/mypage/inc/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/inc/header.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp" />
		<put-attribute name="content" value="/WEB-INF/views/mypage/{1}.jsp" />
	</definition>
	
	<definition name="social.*" template="/WEB-INF/views/social/inc/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/inc/header.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp" />
		<put-attribute name="content" value="/WEB-INF/views/social/{1}.jsp" />
	</definition>
	
	<definition name="team.*" template="/WEB-INF/views/team/inc/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/team/inc/header.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp" />
		<put-attribute name="content" value="/WEB-INF/views/team/{1}.jsp" />
	</definition>
	
	<definition name="*.*" template="/WEB-INF/views/{1}/inc/layout.jsp">
		<!-- <put-attribute name="title" value="wecome to kosta" /> -->
		<put-attribute name="css" value="{2}.css" />
		<put-attribute name="js" value="{2}.js" />
		<put-attribute name="header" value="/WEB-INF/views/{1}/inc/header.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/{1}/inc/footer.jsp" />
		<put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>
</tiles-definitions>    